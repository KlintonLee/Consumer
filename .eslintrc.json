{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "globals": {
      "sinon": true,
      "expect": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
      "indent": ["error", 2],
      "semi": ["error", "never"],
      "comma-dangle": ["error", "never"],
      "no-restricted-syntax": "off"
    }
}
